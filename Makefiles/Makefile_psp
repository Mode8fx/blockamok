PSP_LARGE_MEMORY=1

TARGET		=	blockamok
BUILD		=	build_psp
SRC_DIR		=	src
SRCS		=	$(wildcard $(SRC_DIR)/*.c) $(wildcard $(SRC_DIR)/**/*.c)
OBJS		=	$(patsubst %.c, %.o, $(SRCS))

PSPSDK=$(shell psp-config --pspsdk-path)

CFLAGS = -G0 -O2 -DPSP -I$(PSPSDK)/../include/SDL2

LIBDIR =
LDFLAGS =
LIBS = -lSDL2main -lpng -ljpeg -lSDL2_mixer -lSDL2_ttf -lSDL2 -lGL -lGLU -lglut -lfreetype -lz -lbz2 -lpspmp3 -lmad -logg -lvorbisenc -lvorbis -lvorbisfile -lmikmod -lharfbuzz \
         -lpspvfpu -lpsphprm -lpspsdk -lpspctrl -lpspumd -lpsprtc -lpsppower -lpspgum -lpspgu -lpspaudiolib -lpspaudio \
         -lm -lpspvram

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = blockamok
PSP_EBOOT_ICON = release-resources/logo_icon_psp.png
PSP_EBOOT_PIC1 = release-resources/background_psp.png
# psp sound file: PSP_EBOOT_SND0=SND0.at3

include $(PSPSDK)/lib/build.mak